{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "exclude": ["src/**/__tests__/*"],
  "include": [
    "src/**/*.ts",
    "src/**/*",
    "**/*.vue",
    "*.ts"
  ],
  "compilerOptions": {
    "baseUrl": ".", // This must be specified if "paths" is.
    "paths": {
      "@/*": ["src/*"] // This translates '@' to 'src/'
    }
  }
}
